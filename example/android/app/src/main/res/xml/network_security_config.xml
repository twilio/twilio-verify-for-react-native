<network-security-config>
    <!-- Base configuration for all connections -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust system certificate authorities -->
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Domain-specific configuration -->
    <domain-config>
        <!-- Configure for all domains -->
        <domain includeSubdomains="true">.</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
        <!-- Enable TLSv1.1 and TLSv1.2 -->
        <connection-specs>
            <connection-spec>
                <min-tls-version>1.1</min-tls-version>
            </connection-spec>
        </connection-specs>
    </domain-config>
</network-security-config>
